---
import AuthLayout from "../../layouts/AuthLayout.astro";
import { ResetPasswordForm } from "../../components/auth/ResetPasswordForm";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "../../components/ui/card";

// Get email from URL params if available
const email = Astro.url.searchParams.get("email") || undefined;
---

<AuthLayout title="Resetowanie hasła - Settlements">
  <Card className="w-full max-w-md">
    <CardHeader>
      <CardTitle>Resetowanie hasła</CardTitle>
      <CardDescription> Podaj swój adres email, a wyślemy Ci link do zmiany hasła </CardDescription>
    </CardHeader>
    <CardContent>
      <ResetPasswordForm client:load defaultEmail={email} />
    </CardContent>
  </Card>
</AuthLayout>
